{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "let's debug",          // debug 文件名
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/RayTracing",  // 构建后的可执行文件
        "cwd": "${workspaceFolder}/build/",
        "environment": [],
        "preLaunchTask": "let's make",  // 执行调试的前置任务名
        "MIMode": "gdb",               // 必填（与哪个 debugger 通信）
        // "miDebuggerPath": "/usr/bin/gdb", // 必填（gdb 的路径）
        "args": ["-s","1"], // 命令行参数

      }
    ]
  }